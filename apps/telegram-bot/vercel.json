{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/verify",
            "dest": "/public/index.html"
        },
        {
            "src": "/api/webhook",
            "dest": "/api/webhook.js"
        },
        {
            "src": "/api/verify",
            "dest": "/api/verify.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 0 * * *"
        }
    ]
}