{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": false
    },
    "include": [
        "bots/**/*",
        "src/**/*"
    ],
    "ts-node": {
        "esm": true
    }
}